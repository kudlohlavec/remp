{
    "name": "remp/sso",
    "description": "REMP SSO",
    "keywords": ["remp", "sso"],
    "license": "MIT",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../Composer/laravel-sso",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../Composer/laravel-widgets",
            "options": {
                "symlink": false
            }
        },
        {
            "type": "path",
            "url": "../Composer/laravel-helpers",
            "options": {
                "symlink": false
            }
        }
    ],
    "require": {
        "php": "^7.1.3",
        "arrilot/laravel-widgets": "^3.7",
        "deployer/deployer": "^6.0",
        "deployer/recipes": "^6.0",
        "doctrine/dbal": "~2.3",
        "fideloper/proxy": "^4.0",
        "fzaninotto/faker": "~1.4",
        "kouz/laravel-airbrake": "^0.4",
        "laracasts/flash": "^3.0",
        "laravel/framework": "5.8.*",
        "laravel/socialite": "^4.0",
        "laravelcollective/html": "5.8.*",
        "league/uri": "^5.0",
        "php-amqplib/php-amqplib": "^2.7",
        "predis/predis": " ~1.0",
        "recca0120/laravel-tracy": "^1.8",
        "remp/laravel-helpers": "*",
        "remp/laravel-sso": "@dev",
        "remp/laravel-widgets": "*",
        "spatie/laravel-activitylog": "^3.9",
        "spatie/laravel-permission": "^3.6",
        "tymon/jwt-auth": "^1.0",
        "yajra/laravel-datatables-oracle": "^9.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "phpunit/phpunit": "^7.0",
        "barryvdh/laravel-ide-helper": "^2.3",
        "friendsofphp/php-cs-fixer": "^2.14",
        "nunomaduro/collision": "^2.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
